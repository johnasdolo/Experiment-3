#include<iostream>
#include<conio.h>
#include<string.h>

using namespace std;

int main ()
{

	int size;
	char x[100], y[100];
	
	cout << "Enter any characters you want: " << endl;
	cin >> x;
	
	size = strlen(x);
	
	for (int a = 0, b = size ; a <= size ; a++, b--)
    	{
        	 y[b] = x[a];
    	}
    	
    cout << "\n";
    	
    for (int a=0 ; a<= size ; a++)
    {
        cout << y[a] << ' ';
    }
    cout << "\n";
    cout << "The size of the array is: " << size << endl;
    
	getch();
	return 0;	
}
